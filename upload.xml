	console.log("init is called");
	//iwcClient = new iwc.Client(["*"]);

	//iwcClient.connect(iwcCallback);
	
//-----------------------------------------------------------------------------------keli				
	duiClient = new DUIClient();
	duiClient.connect(iwcCallback);
	duiClient.finishMigration = onFinishMig;
//	duiClient.getWidgetState
